<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentActivity" parent="@android:style/Theme.Translucent.NoTitleBar">>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--popupwindow 进出动画-->
    <style name="popupwindow_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>

</resources>