<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentActivity" parent="@style/Theme.AppCompat.Light.NoActionBar">>
        <!--不设置activity进入和退出动画样式-->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <!--popupwindow 进出动画-->
    <style name="popupwindow_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>

</resources>